}

.form-row {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 88rpx;
  align-items: center;
}

.form-row-label {
  width: 180rpx;
  /* font: 34rpx; */
  margin-right: 10rpx;
  text-align: left;
  color: #000;
}

.form-row-content {
  flex: 1;
  /* font: 34rpx; */
}

.form-line {
  height: 1px;
  background-color: #ddd;
  margin-left: 30rpx;
}
