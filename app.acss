
page {
  box-sizing: border-box;
  width:100vw;
  background-color: #fff;
  font-family:"SimSun";
  font-size:26rpx; 
  color:#333;  
}
.page {
  /* font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  font: 24rpx; */
  /* font-family:"DFKai-SB"; */
  font-family:"SimSun";
  font-size:26rpx;          /*小程序中，使用rpx做单位*/
  flex: 1;
  background-color: #fff;
}

.page-description {
  margin-bottom: 4rpx;
  background-color: #fff;
}

.page-section {
  background: #fff;
  margin-bottom: 4rpx;
}

.page-section-title {
  padding: 6rpx 6rpx;
  background-color: #fff;

}

.page-section-demo {
  background-color: #fff;
  margin:40rpx;

}

.page-section-btns {
  border-top: 1px solid #ddd;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.page-section-btns > view {
  flex: 1;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #49a9ee;
}
.page-section-btns > view + view {
  border-left: 1px solid #ddd;
}

button {
  margin-top:20rpx;
  margin-bottom:20rpx;
}

.bc_blue {
  background-color: #49A9EE;
}

